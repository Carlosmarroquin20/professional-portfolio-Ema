---
import "@fontsource-variable/onest"

import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
import { ViewTransitions } from "astro:transitions"

interface Props {
  title: string
  description: string
}

const { description, title } = Astro.props
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />

    <!-- Anti-flash: apply saved language BEFORE first paint -->
    <script is:inline>
      (function () {
        try {
          var lang = localStorage.getItem("portfolio-lang") || "es";
          if (lang === "en") document.documentElement.classList.add("lang-en");
        } catch (e) {}
      })();
    </script>
  </head>

  <body class="relative text-black dark:text-white">
    <div
      class="fixed top-0 bottom-0 z-[-2] min-h-screen w-full bg-white dark:bg-slate-950
      bg-gradient-to-br from-white via-blue-50/20 to-white
      dark:bg-gradient-to-br dark:from-slate-950 dark:via-slate-900/50 dark:to-slate-950"
    >
    </div>
    <Header />
    <slot />
    <Footer />

    <!-- Language toggle: global function + view-transition re-apply -->
    <script>
      function applyLang(lang: string) {
        if (lang === "en") {
          document.documentElement.classList.add("lang-en");
        } else {
          document.documentElement.classList.remove("lang-en");
        }
        // Swap bilingual CV download links
        document.querySelectorAll("[data-cv-es]").forEach((el) => {
          const link = el as HTMLAnchorElement;
          const href =
            link.getAttribute(`data-cv-${lang}`) ||
            link.getAttribute("data-cv-es") ||
            "";
          link.setAttribute("href", href);
          link.setAttribute("download", href.split("/").pop() || "");
        });
      }

      (window as any).toggleLang = function () {
        const newLang = document.documentElement.classList.contains("lang-en")
          ? "es"
          : "en";
        try {
          localStorage.setItem("portfolio-lang", newLang);
        } catch (e) {}
        applyLang(newLang);
      };

      // Re-apply after Astro view transitions
      document.addEventListener("astro:page-load", () => {
        try {
          applyLang(localStorage.getItem("portfolio-lang") || "es");
        } catch (e) {}
      });
    </script>

    <style is:global>
      :root {
        color-scheme: light dark;
      }

      html {
        font-family: "Onest Variable", system-ui, sans-serif;
        scroll-behavior: smooth;
      }

      body {
        color: rgba(17, 17, 17, 0.9);
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        overscroll-behavior: none;
        padding-top: 5.5rem;
      }

      @media (max-width: 768px) {
        body {
          padding-top: 5rem;
        }
      }

      @media (prefers-reduced-motion: reduce) {
        html {
          scroll-behavior: auto;
        }
      }

      @media (prefers-color-scheme: dark) {
        body {
          color: rgba(255, 255, 255, 0.9);
        }
      }

      /* ── i18n: CSS-driven language toggle ────────────────── */
      .i18n-en            { display: none; }
      .i18n-en-block      { display: none; }
      html.lang-en .i18n-es       { display: none; }
      html.lang-en .i18n-en       { display: inline; }
      html.lang-en .i18n-es-block { display: none; }
      html.lang-en .i18n-en-block { display: block; }

      /* ── Scrollbar hide ───────────────────────────────────── */
      .no-scrollbar::-webkit-scrollbar { display: none; }
      .no-scrollbar { -ms-overflow-style: none; scrollbar-width: none; }

      #header-nav {
        animation: blur linear both 0.5s;
        animation-timeline: scroll();
        animation-range: 0 500px;
      }

      @keyframes blur {
        to {
          backdrop-filter: blur(20px);
          border-width: 1px;
          border-color: rgba(0, 0, 0);
          padding: 0.25rem 0.75rem;
          display: flex;
          flex-direction: row;
          align-items: center;
          background-color: rgb(229, 229, 229);
          border-radius: 9999px;
        }
      }

      @media (prefers-color-scheme: dark) {
        @keyframes blur {
          from {
            border: 0px;
          }
          to {
            box-shadow:
              0px 5px 50px -5px rgba(0, 0, 0, 0.1),
              0px 0px 0 1px rgba(0, 0, 0, 0.3);
            background: rgba(0, 0, 0, 0.3);
            backdrop-filter: blur(20px);
            border-width: 1px;
            border-color: rgba(0, 0, 0);
            padding-left: 0.75rem;
            padding-right: 0.75rem;
            padding-top: 0.25rem;
            padding-bottom: 0.25rem;
            display: flex;
            flex-direction: row;
            align-items: center;
            background-color: rgba(0, 0, 0, 0.3);
            border-radius: 9999px;
          }
        }
      }
    </style>
  </body>
</html>
