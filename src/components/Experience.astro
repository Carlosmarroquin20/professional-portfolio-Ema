import ExperienceItem from "./ExperienceItem.astro";

const EXPERIENCE = [
  {
    date: "2019 - 2020",
    titleEs: "Especialista en Diseño Publicitario y Producción Multimedia",
    titleEn: "Advertising Design & Multimedia Production Specialist",
    company: "Freelance",
    descriptionEs: "Creación de material gráfico y videos publicitarios con herramientas de diseño multimedia. Enfoque en comunicación visual efectiva para campañas comerciales.",
    descriptionEn: "Creation of graphic materials and advertising videos using multimedia design tools. Focused on effective visual communication for commercial campaigns.",
  },
  {
    date: "2021 - 2022",
    titleEs: "Coordinador de Tecnología y Producción Audiovisual",
    titleEn: "Technology & Audiovisual Production Coordinator",
    company: "Unción TV",
    descriptionEs: "Gestión del área tecnológica del canal. Supervisión de cámaras, sistemas de transmisión y software audiovisual. Desarrollo de contenido publicitario para medios digitales y televisión.",
    descriptionEn: "Management of the channel's technology area. Oversight of cameras, broadcasting systems and audiovisual software. Development of advertising content for digital media and TV.",
  },
  {
    date: "2023 - 2024",
    titleEs: "Instructor de Programación y Tecnologías Computacionales",
    titleEn: "Programming & Computer Technologies Instructor",
    company: "Liceo Nuevo Milenio",
    descriptionEs: "Impartición de clases de programación y computación con planes de estudio prácticos enfocados en lógica de programación y desarrollo de software.",
    descriptionEn: "Teaching programming and computing courses with practical curricula focused on programming logic and software development.",
  },
  {
    date: "Actualmente",
