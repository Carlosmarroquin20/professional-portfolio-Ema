<ol class="relative mt-8 space-y-6">
  {EXPERIENCE.map((exp) => (
    <li>
      <ExperienceItem
        title={exp.titleEs}
        titleEn={exp.titleEn}
        company={exp.company}
        date={exp.date}
        dateEn={exp.dateEn}
        description={exp.descriptionEs}
        descriptionEn={exp.descriptionEn}
      />
    </li>
  ))}
</ol>
