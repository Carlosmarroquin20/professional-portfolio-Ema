---
const { href } = Astro.props;
---

<a
    target="_blank"
    href={href}
    role="link"
    class="inline-flex items-center justify-center gap-2 px-4 py-2 bg-white border-2 border-gray-300 text-gray-800 rounded-lg font-medium transition-all duration-300 hover:border-blue-500 hover:text-blue-600 hover:shadow-md hover:-translate-y-1 dark:bg-gray-800 dark:border-gray-700 dark:text-white dark:hover:border-blue-400 dark:hover:text-blue-400 dark:hover:shadow-lg group max-w-fit focus:outline-none focus-visible:ring-2 focus-visible:ring-blue-500 focus-visible:ring-offset-2"
>
    <slot />
</a>
