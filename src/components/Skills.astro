---

<div class="grid gap-5 sm:grid-cols-2">
  {SKILL_CATEGORIES.map((cat) => (
    <div class={`p-5 rounded-2xl border transition-all duration-300 hover:shadow-lg hover:-translate-y-0.5 ${cat.bgClass}`}>
      <h3 class={`flex items-center gap-2 text-base font-bold mb-4 ${cat.headerClass}`}>
        <span set:html={cat.icon} />
        {cat.title}
      </h3>
      <div class="flex flex-wrap gap-2">
        {cat.skills.map((skill) => (
          <span class={`rounded-lg px-2.5 py-1 text-xs font-medium transition-all duration-200 hover:scale-105 ${cat.badgeClass}`}>
            {skill}
          </span>
        ))}
      </div>
    </div>
  ))}
</div>
