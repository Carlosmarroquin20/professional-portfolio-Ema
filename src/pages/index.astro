---
import Layout from "@/layouts/Layout.astro"

import AboutMe from "@/components/AboutMe.astro"
import Briefcase from "@/components/icons/Briefcase.astro"
import CodeIcon from "@/components/icons/Code.astro"
import Experience from "@/components/Experience.astro"
import ProfileCheck from "@/components/icons/ProfileCheck.astro"
import Projects from "@/components/Projects.astro"
import Skills from "@/components/Skills.astro"
import CTA from "@/components/CTA.astro"
import SectionContainer from "@/components/SectionContainer.astro"
import Hero from "@/components/Hero.astro"
import TitleSection from "@/components/TitleSection.astro"
import Certifications from "@/components/Certifications.astro"
import EnterpriseValue from "@/components/EnterpriseValue.astro"
---

<Layout
  title="Emanuel Marroquín — .NET Developer & Seguridad Informática"
  description="Desarrollador de Software .NET con experiencia en sistemas bancarios de alta disponibilidad. Especializado en cloud-native deployment (OpenShift/Kubernetes) y seguridad informática. Disponible para proyectos internacionales."
>
  <main class="px-4">

    <!-- Hero -->
    <SectionContainer class="py-14 md:py-32">
      <Hero />
    </SectionContainer>

    <!-- Stats -->
    <SectionContainer class="py-8 md:py-14">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <div class="group p-5 rounded-2xl bg-gradient-to-br from-gray-50/50 to-gray-100/50 dark:from-gray-900/30 dark:to-gray-800/30 border border-gray-200/50 dark:border-gray-800/50 hover:border-blue-300 dark:hover:border-blue-700 transition-all duration-300 hover:shadow-lg hover:-translate-y-1">
          <div class="text-3xl md:text-4xl font-bold bg-gradient-to-r from-violet-600 to-purple-600 bg-clip-text text-transparent mb-1">5+</div>
          <h3 class="text-sm md:text-base font-semibold text-gray-900 dark:text-white">Años de Experiencia</h3>
          <p class="text-xs text-gray-600 dark:text-gray-400 mt-1">En desarrollo de software</p>
        </div>
        <div class="group p-5 rounded-2xl bg-gradient-to-br from-gray-50/50 to-gray-100/50 dark:from-gray-900/30 dark:to-gray-800/30 border border-gray-200/50 dark:border-gray-800/50 hover:border-blue-300 dark:hover:border-blue-700 transition-all duration-300 hover:shadow-lg hover:-translate-y-1">
          <div class="text-3xl md:text-4xl font-bold bg-gradient-to-r from-blue-600 to-cyan-600 bg-clip-text text-transparent mb-1">8+</div>
          <h3 class="text-sm md:text-base font-semibold text-gray-900 dark:text-white">Proyectos</h3>
          <p class="text-xs text-gray-600 dark:text-gray-400 mt-1">Enterprise, web y seguridad</p>
        </div>
        <div class="group p-5 rounded-2xl bg-gradient-to-br from-gray-50/50 to-gray-100/50 dark:from-gray-900/30 dark:to-gray-800/30 border border-gray-200/50 dark:border-gray-800/50 hover:border-blue-300 dark:hover:border-blue-700 transition-all duration-300 hover:shadow-lg hover:-translate-y-1">
          <div class="text-3xl md:text-4xl font-bold bg-gradient-to-r from-red-600 to-orange-500 bg-clip-text text-transparent mb-1">20+</div>
          <h3 class="text-sm md:text-base font-semibold text-gray-900 dark:text-white">Tecnologías</h3>
          <p class="text-xs text-gray-600 dark:text-gray-400 mt-1">Dev, Cloud y Seguridad</p>
        </div>
        <div class="group p-5 rounded-2xl bg-gradient-to-br from-gray-50/50 to-gray-100/50 dark:from-gray-900/30 dark:to-gray-800/30 border border-gray-200/50 dark:border-gray-800/50 hover:border-blue-300 dark:hover:border-blue-700 transition-all duration-300 hover:shadow-lg hover:-translate-y-1">
          <div class="text-3xl md:text-4xl font-bold bg-gradient-to-r from-green-600 to-emerald-500 bg-clip-text text-transparent mb-1">C1</div>
          <h3 class="text-sm md:text-base font-semibold text-gray-900 dark:text-white">Inglés Avanzado</h3>
          <p class="text-xs text-gray-600 dark:text-gray-400 mt-1">Equipos internacionales</p>
        </div>
      </div>
    </SectionContainer>

    <div class="space-y-20 md:space-y-28">

      <!-- Experiencia -->
      <SectionContainer id="experiencia">
        <TitleSection>
          <Briefcase class="size-8" />
          Experiencia laboral
        </TitleSection>
        <Experience />
      </SectionContainer>

      <!-- Proyectos -->
      <SectionContainer id="proyectos">
        <TitleSection>
          <CodeIcon class="size-7" />
          Proyectos
        </TitleSection>
        <Projects />
      </SectionContainer>

      <!-- Habilidades Técnicas -->
      <SectionContainer id="skills">
        <TitleSection>
          <CodeIcon class="size-8" />
          Habilidades Técnicas
        </TitleSection>
        <Skills />
      </SectionContainer>

      <!-- Lo que aporto -->
      <SectionContainer id="valor">
        <TitleSection>
          <ProfileCheck class="size-8" />
          Lo que aporto a proyectos enterprise
        </TitleSection>
        <EnterpriseValue />
      </SectionContainer>

      <!-- Sobre mí -->
      <SectionContainer id="sobre-mi">
        <TitleSection>
          <ProfileCheck class="size-8" />
          Sobre mí
        </TitleSection>
        <AboutMe />
      </SectionContainer>

      <!-- Certificaciones y Formación -->
      <SectionContainer id="certificaciones">
        <TitleSection>
          <CodeIcon class="size-7" />
          Certificaciones y Formación
        </TitleSection>
        <Certifications />
      </SectionContainer>

    </div>

    <!-- CTA -->
    <SectionContainer class="py-12 md:py-20">
      <CTA />
    </SectionContainer>

  </main>
</Layout>
